# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

#USUARIOS
GET      /usuarios                              controllers.UserController.getAllUsers(request: Request)
GET      /usuario/:userId                       controllers.UserController.getUser(request: Request, userId: String)
POST     /usuarios                              controllers.UserController.createUser(request: Request)
PATCH    /usuario/:userId                     controllers.UserController.updateUser(request: Request, userId: String)
DELETE   /usuario/:userId                       controllers.UserController.deleteUser(request: Request, userId: String)

#RECETAS
#GET      /recetas                              controllers.RecipeController.getAllRecipes(request: Request)
#GET      /receta/:recipeId                     controllers.RecipeController.getOneRecipe(recipeId: Long)
#POST     /recetas                              controllers.RecipeController.createRecipe(request: Request)